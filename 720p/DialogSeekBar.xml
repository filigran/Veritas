<?xml version="1.0" encoding="UTF-8"?>
<!-- Veritas -->
<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<!--<visible>!Window.IsVisible(fullscreeninfo) + [VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>-->
    <visible>true</visible>

	<controls>

		<control type="group">
			<posx>0</posx>
			<posy>690</posy>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>30</height>
				<texture>veritas/white.png</texture>
                <colordiffuse>cc222222</colordiffuse>
			</control>
            <control type="progress">
				<description>Progress Bar</description>
				<posx>0</posx>
				<posy>-4</posy>
				<width>1300</width>
                <height>30</height>
                <info>Player.Progress</info>
                <reveal>false</reveal>
                <texturebg>-</texturebg>
                <lefttexture>-</lefttexture>
                <midtexture border="15">veritas/white.png</midtexture>
                <righttexture>-</righttexture>
                <overlaytexture></overlaytexture>
                <colordiffuse>ff1774b5</colordiffuse>
                <visible>true</visible>
			</control>
			<control type="progress">
				<description>Cache Bar</description>
				<posx>0</posx>
				<posy>-4</posy>
				<width>1300</width>
                <height>30</height>
                <info>Player.ProgressCache</info>
                <reveal>false</reveal>
                <texturebg>-</texturebg>
                <lefttexture>-</lefttexture>
                <midtexture border="15">veritas/white.png</midtexture>
                <righttexture>-</righttexture>
                <overlaytexture></overlaytexture>
                <colordiffuse>221774b5</colordiffuse>
                <visible>true</visible>
			</control>
            <control type="label">
				<posx>20</posx>
				<posy>0</posy>
				<width>100</width>
                <height>30</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Light_Uppercase_19</font>
				<label>$INFO[Player.Time]</label>
			</control>
            <control type="label">
				<posx>320</posx>
				<posy>0</posy>
				<width>640</width>
                <height>30</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Light_Uppercase_19</font>
				<label>$INFO[Player.Chapter,Chapter , ]$INFO[Player.Chaptercount, / ] $INFO[Player.FinishTime, • End time:]</label>
                <visible>Player.ChapterCount</visible>
			</control>
			<control type="label">
				<posx>320</posx>
				<posy>0</posy>
				<width>640</width>
                <height>30</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Light_Uppercase_19</font>
				<label>$INFO[Player.FinishTime, End time:]</label>
                <visible>!Player.ChapterCount</visible>
			</control>
            <control type="label">
				<posx>1260</posx>
				<posy>20</posy>
				<width>100</width>
				<align>right</align>
				<font>Light_Uppercase_19</font>
                <label>$INFO[Player.FinishTime,End time:]</label>
			</control>
			<control type="label">
				<posx>1260</posx>
				<posy>0</posy>
				<width>100</width>
                <height>30</height>
                <align>right</align>
                <aligny>center</aligny>
                <font>Light_Uppercase_19</font>
				<label>$INFO[Player.Duration]</label>
			</control>

			<control type="slider" id="401">
				<description>Seekbar</description>
				<posx>10</posx>
				<posy>48</posy>
				<width>1120</width>
				<visible>Player.Seeking</visible>
			</control>

		</control>

	</controls>

</window>
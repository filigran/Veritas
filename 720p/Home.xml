<?xml version="1.0" encoding="UTF-8"?>
<!-- Veritas -->
<window id="0">
    <defaultcontrol always="true">300</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <control type="multiimage">
            <description>Menu fanart</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <randomize>true</randomize>
            <timeperimage>5000</timeperimage>
            <fadetime>1000</fadetime>
            <pauseatend>0</pauseatend>
            <loop>true</loop>
            <aspectratio background="true" aligny="top">scale</aspectratio>
            <imagepath background="true">$INFO[Container(300).ListItem.Thumb]</imagepath>
        </control>
        <control type="image">
            <description>Fanart overlay</description>
            <include>Dimensions_Fullscreen</include>
            <fadetime>0</fadetime>
            <texture background="true">veritas/white.png</texture>
            <colordiffuse>aa000000</colordiffuse>
        </control>
        <control type="list" id="300">
            <description>Home menu</description>
            <posx>100</posx>
            <posy>600</posy>
            <width>1080</width>
            <height>564</height>
            <onup>300</onup>
            <ondown>300</ondown>
            <onleft>300</onleft>
            <onright>300</onright>
            <focusposition>0</focusposition>
            <scrolltime>200</scrolltime>
            <orientation>horizontal</orientation>
            <itemlayout width="270" height="50">
                 <control type="label">
                    <posx>135</posx>
                    <posy>0</posy>
                    <height>50</height>
                    <width>270</width>
                    <align>center</align>
                    <font>Light_Uppercase_36</font>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="270" height="50">
                <control type="label">
                    <posx>135</posx>
                    <posy>0</posy>
                    <width>270</width>
                    <height>50</height>
                    <align>center</align>
                    <info>ListItem.Label</info>
                    <font>Light_Uppercase_36</font>
                    <textcolor>ff1774b5</textcolor>
                </control>
            </focusedlayout>
            <content>
                <item id="1">
                    <description>Play Disc</description>
                    <label>31014</label> <!-- localize -->
                    <onclick>PlayDVD</onclick>
                    <thumb>/storage/backup/xbmc-stuff/xbmc-backdrops/playdisc.jpg</thumb>
                    <visible>System.HasMediadvd</visible>
                </item>
                <item id="2">
                    <description>Movies</description>
                    <label>31006</label> <!-- localize -->
                    <onclick>ActivateWindow(Video,movietitles)</onclick>
                    <thumb>/storage/backup/xbmc-stuff/xbmc-backdrops/movies</thumb>
                    <visible>Library.HasContent(Movies)</visible>
                </item>
                <item id="3">
                    <description>TV Shows</description>
                    <label>31007</label> <!-- localize -->
                    <onclick>ActivateWindow(Video,tvshowtitles)</onclick>
                    <thumb>/storage/backup/xbmc-stuff/xbmc-backdrops/tvshows</thumb>
                    <visible>Library.HasContent(TVShows)</visible>
                </item>
                <item id="4">
                    <description>Weather</description>
                    <label>31010</label> <!-- localize -->
                    <thumb>/storage/backup/xbmc-stuff/xbmc-backdrops/weather</thumb>
                    <onclick>ActivateWindow(weather)</onclick>
                </item>
                <item id="5">
                    <description>Games</description>
                    <label>Spel</label> <!-- localize -->
                    <onclick>PlayDVD</onclick>
                    <thumb>/storage/backup/xbmc-stuff/xbmc-backdrops/games.jpg</thumb>
                    <visible>!System.HasMediadvd</visible>
                </item>
            </content>
        </control>
    </controls>
</window>

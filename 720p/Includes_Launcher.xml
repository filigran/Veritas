<includes>
    <include name="Launcher_Left_bar">
        <control type="group">
            <posx>80</posx>
            <posy>130</posy>
            <visible>Control.IsVisible(516) | Control.IsVisible(501) | Control.IsVisible(518)</visible>
            <control type="image">
                <description>Game screenshot</description>
                <posx>10</posx>
                <posy>0</posy>
                <width>288</width>
                <height>144</height>
                <fadetime>400</fadetime>
                <texture fallback="nothumb.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
                <visible>SubString(Container.FolderPath,?)</visible>
            </control>
            <control type="fadelabel">
                <description>Game name</description>
                <posx>0</posx>
                <posy>164</posy>
                <width>300</width>
                <height>30</height>
                <label>$INFO[ListItem.Title]</label>
                <font>Light_Uppercase_24</font>
                <textcolor>ff00b8f5</textcolor>
                <scrollout>false</scrollout>
                <pauseatend>3000</pauseatend>
            </control>
            <control type="textbox">
                <posx>0</posx>
                <posy>210</posy>
                <width>300</width>
                <height>300</height>
                <align>left</align>
                <info>ListItem.Plot</info>
                <font>Normal_24</font>
                <textcolor>ffd3d3d3</textcolor>
                <autoscroll delay="7000" time="3000" repeat="10000" />
            </control>
        </control>
    </include>
</includes>

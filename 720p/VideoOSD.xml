<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2901">
    <defaultcontrol always="true">14</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <animation effect="slide" start="0,40" time="200">WindowOpen</animation>
    <animation effect="slide" end="0,40" time="200">WindowClose</animation>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>veritas/white.png</texture>
            <colordiffuse>aa000000</colordiffuse>
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
            <visible>Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings)</visible>
        </control>
        <control type="group">
            <posx>0</posx>
            <posy>30r</posy>
            <control type="group">
                <visible>!Window.IsVisible(sliderdialog)</visible>

                <control type="label">
                    <description>Current Control</description>
                    <posx>470</posx>
                    <posy>63</posy>
                    <width>340</width>
                    <align>center</align>
                    <label>$INFO[System.CurrentControl]</label>
                </control>

                <control type="image">
                    <posx>0</posx>
                    <posy>-20</posy>
                    <width>1300</width>
                    <height>70</height>
                    <texture border="7">veritas/osd_seekbar_filled.png</texture>
                    <colordiffuse>ff1774b5</colordiffuse>
                </control>

                <control type="grouplist" id="100">
                    <posx>15</posx>
                    <posy>-10</posy>
                    <width>500</width>
                    <height>60</height>
                    <itemgap>2</itemgap>
                    <orientation>horizontal</orientation>
                    <align>left</align>
                    <onleft>-</onleft>
                    <onright>12</onright>
                    <onup>-</onup>
                    <ondown>-</ondown>

                    <control type="button" id="2">
                        <description>Audio Settings</description>
                        <width>35</width>
                        <height>34</height>
                        <label>13396</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_audiosettings_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_audiosettings_nf.png</texturenofocus>
                        <onclick>ActivateWindow(124)</onclick>
                    </control>

                    <control type="button" id="3">
                        <description>Video Settings</description>
                        <width>35</width>
                        <height>34</height>
                        <label>13395</label>
                        <align>left</align>
                        <font>-</font>
                        <texturefocus>veritas/osd_vidsettings_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_vidsettings_nf.png</texturenofocus>
                        <onclick>ActivateWindow(123)</onclick>
                    </control>

                </control>

                <control type="grouplist" id="101">
                    <posx>390</posx>
                    <posy>-10</posy>
                    <width>500</width>
                    <height>60</height>
                    <itemgap>2</itemgap>
                    <orientation>horizontal</orientation>
                    <align>center</align>
                    <onleft>3</onleft>
                    <onright>4</onright>
                    <onup>-</onup>
                    <ondown>-</ondown>

                    <control type="button" id="12">
                        <description>Skip Back</description>
                        <width>35</width>
                        <height>34</height>
                        <label>210</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_prev_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_prev_nf.png</texturenofocus>
                        <onclick>PlayerControl(Previous)</onclick>
                    </control>

                    <control type="button" id="13">
                        <description>Rewind</description>
                        <width>35</width>
                        <height>34</height>
                        <label>31036</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_rew_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_rew_nf.png</texturenofocus>
                        <onclick>PlayerControl(Rewind)</onclick>
                    </control>

                    <control type="togglebutton" id="14">
                        <description>Play/Pause</description>
                        <width>35</width>
                        <height>34</height>
                        <label>31037</label>
                        <altlabel>208</altlabel>
                        <font>-</font>
                        <texturefocus>veritas/osd_play_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_play_nf.png</texturenofocus>
                        <onclick>PlayerControl(Play)</onclick>
                    </control>

                    <control type="button" id="15">
                        <description>Stop</description>
                        <width>35</width>
                        <height>34</height>
                        <label>31038</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_stop_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_stop_nf.png</texturenofocus>
                        <onclick>PlayerControl(Stop)</onclick>
                    </control>

                    <control type="button" id="16">
                        <description>Fast Forward</description>
                        <width>35</width>
                        <height>34</height>
                        <label>31039</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_ff_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_ff_nf.png</texturenofocus>
                        <onclick>PlayerControl(Forward)</onclick>
                    </control>

                    <control type="button" id="17">
                        <description>Next</description>
                        <width>35</width>
                        <height>34</height>
                        <label>209</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_next_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_next_nf.png</texturenofocus>
                        <onclick>PlayerControl(Next)</onclick>
                    </control>

                </control>

                <control type="grouplist" id="102">
                    <posx>85r</posx>
                    <posy>-10</posy>
                    <width>200</width>
                    <height>60</height>
                    <itemgap>2</itemgap>
                    <orientation>horizontal</orientation>
                    <align>left</align>
                    <onleft>17</onleft>
                    <onright>-</onright>
                    <onup>-</onup>
                    <ondown>-</ondown>

                    <control type="button" id="4">
                        <description>Subtitles</description>
                        <width>35</width>
                        <height>34</height>
                        <label>287</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_subs_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_subs_nf.png</texturenofocus>
                        <onclick>Close</onclick>
                        <onclick>XBMC.RunScript(script.xbmc.subtitles)</onclick>
                        <visible>IsEmpty(Skin.String(SubtitlesPath))</visible>
                    </control>

                    <control type="button" id="5">
                        <description>Subtitles</description>
                        <width>50</width>
                        <height>50</height>
                        <label>287</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_subs_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_subs_nf.png</texturenofocus>
                        <onclick>Close</onclick>
                        <onclick>XBMC.RunScript($INFO[Skin.String(SubtitlesPath)])</onclick>
                        <visible>!IsEmpty(Skin.String(SubtitlesPath))</visible>
                    </control>

                    <control type="button" id="6">
                        <description>DVD menu</description>
                        <width>35</width>
                        <height>34</height>
                        <label>31041</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_dvdmenu_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_dvdmenu_nf.png</texturenofocus>
                        <onclick>PlayerControl(ShowVideoMenu)</onclick>
                        <visible>VideoPlayer.HasMenu</visible>
                    </control>
                    <control type="button" id="7">
                        <description>DVD menu</description>
                        <width>35</width>
                        <height>34</height>
                        <label>31041</label>
                        <font>-</font>
                        <texturefocus>veritas/osd_dvdmenu_fo.png</texturefocus>
                        <texturenofocus>veritas/osd_dvdmenu_nf.png</texturenofocus>
                        <colordiffuse>88ffffff</colordiffuse>
                        <enable>no</enable>
                        <visible>!VideoPlayer.HasMenu</visible>
                    </control>

                </control>

            </control>

        </control>

    </controls>

</window>

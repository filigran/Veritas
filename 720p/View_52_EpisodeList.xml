                                <posx>30</posx>
                                <posy>20</posy>
                                <width>350</width>
                                <height>197</height>
                                <aspectratio>scale</aspectratio>
                                <texture background="true">$INFO[ListItem.Icon]</texture>
                            </control>
                            <control type="image">
                                <description>Thumb frame</description>
                                <posx>21</posx>
                                <posy>12</posy>
                                <width>368</width>
                                <height>213</height>
                                <aspectratio>stretch</aspectratio>
                                <texture border="13">veritas/poster_frame_wide.png</texture>
                            </control>
                            <control type="image">
                                <description>Watched overlay</description>
                                <posx>355</posx>
                                <posy>195</posy>
                                <width>40</width>
                                <height>40</height>
                                <aspectratio>keep</aspectratio>
                                <texture>veritas/$INFO[ListItem.Overlay]</texture>
                                <colordiffuse>Green</colordiffuse>
                                <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
                            </control>
                            <control type="group">
                                <posx>409</posx>
                                <posy>7</posy>

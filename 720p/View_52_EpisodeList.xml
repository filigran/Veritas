                                <fadetime>100</fadetime>
                                <aspectratio align="left" aligny="top">stretch</aspectratio>
                                <texture>veritas/poster_shadow.png</texture>
                                <colordiffuse>Black</colordiffuse>
                            </control>
                            <control type="image">

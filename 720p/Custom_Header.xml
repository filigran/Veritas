<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window type="dialog" id="50">
    <zorder>2</zorder>
    <visible>!Window.IsVisible(startup) + [!Window.IsVisible(FullscreenVideo) | [Window.IsVisible(FullscreenVideo) + !Player.Playing] | [Player.Playing + Window.IsVisible(Seekbar)]]</visible>
    <controls>
        <control type="group">
            <description>Time and date</description>
            <posx>20r</posx>
            <posy>10</posy>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>300</width>
                <height>80</height>
                <align>right</align>
                <aligny>top</aligny>
                <info>System.Time</info>
                <textcolor>White</textcolor>
                <font>Light_Uppercase_36</font>
            </control>
            <control type="label">
                <posx>0</posx>
                <posy>40</posy>
                <width>300</width>
                <height>40</height>
                <align>right</align>
                <aligny>top</aligny>
                <info>System.Date(DDD d MMM)</info>
                <textcolor>EpisodeInfo</textcolor>
                <font>Light_Uppercase_19</font>
            </control>
        </control>
    </controls>
</window>

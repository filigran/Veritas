<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window type="buttonMenu" id="110">
    <defaultcontrol always="true">410</defaultcontrol>
    <allowoverlay>yes</allowoverlay>

    <controls>
        <control type="button" id="410">
            <onfocus>Dialog.Close(movieinformation)</onfocus>
            <onfocus>Dialog.Close(contextmenu)</onfocus>
            <onfocus>SetFocus(3111)</onfocus>
        </control>
        <include>GlobalOverlay</include>
        <control type="group">
            <posx>440</posx>
            <posy>260</posy>
            <control type="image">
                <posx>-20</posx>
                <posy>-20</posy>
                <width>440</width>
                <height>220</height>
                <texture border="22">other_textures/ContentPanel.png</texture>
            </control>
            <control type="grouplist" id="3110">
                <posx>10</posx>
                <posy>40</posy>
                <width>380</width>
                <height>382</height>
                <itemgap>2</itemgap>
                <onleft>-</onleft>
                <onright>-</onright>
                <onup>1</onup>
                <ondown>1</ondown>
                <orientation>vertical</orientation>
                <control type="button" id="3111">
                    <description>Exit XBMC button</description>
                    <width>380</width>
                    <label>13012</label>
                    <onclick>Quit()</onclick>
                    <visible>System.ShowExitButton</visible>
                </control>
                <control type="button" id="3112">
                    <description>Settings button</description>
                    <width>380</width>
                    <label>5</label>
                    <onclick>ActivateWindow(Settings)</onclick>
                </control>
                <control type="button" id="3113">
                    <description>Update Next Aired button</description>
                    <width>380</width>
                    <label>32009</label>
                    <onclick>RunScript(script.tv.show.next.aired,force=True)</onclick>
                    <visible>Container.Content(TVShows)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>
